#include <stdio.h>
#include <string.h> // strcpy

int main(){
	
	int opcion, matricula;
	char nombre[100], apellidos[200], nombreCompleto[300];
	
	printf("Bienvenido al Programa de Preinscripcion de la Politecnica\n");
	
	printf("Introduzca opcion:\n");
	printf("1 - Registrarse como nuevo usuario\n");
	printf("2 - Iniciar sesion\n");
	printf("3 - Ayuda\n");
	scanf("%d", &opcion);
	
	switch (opcion){
		case 1:
			printf("Registrarse como nuevo usuario\n");
			printf("Introduzca sus datos:\n");		
		    
			printf("Introduce nombre:\n");
			scanf("%s", nombre);
			
			printf("Introduce apellidos:\n");
			scanf("%s", apellidos);
					    
			strcpy(nombreCompleto, nombre); 
			strcat(nombreCompleto, " ");
			strcat(nombreCompleto, apellidos);
		    printf("Nombre completo: %s\n", nombreCompleto);
			break;			
		case 2:
			printf("Iniciar sesion\n");
		    printf("Introduzca numero de matricula(o lo que sea que decidamos)"); // Aqui accede a ficheros de gente previamente registradas
			break;
		case 3:
			
			printf("\nContacte con la secretaria de la ETSIDI:\n910677450 / 910677451 \nO a traves de nuestro e-mail: \nsecretaria.etsidi@upm.es ");
			
			break;
		
		default:	
			printf("Opcion incorrecta\n");
			
	}

	
}
